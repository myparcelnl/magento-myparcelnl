<layout version="0.1.0">
    <default>
        <reference name="before_body_end">
            <block type="core/template" name="myparcel_checkout_base_url"
                   template="TIG/MyParcel2014/checkout/baseUrl.phtml"/>
        </reference>
    </default>

    <checkout_onepage_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/jquery-myparcel.min.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/MutationObserver.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/moment.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/webcomponents.min.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/myparcel.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/checkout.js</file>
            </action>
        </reference>
        <reference name="checkout.onepage.shipping_method.available">
            <action method="setTemplate">
                <template>TIG/MyParcel2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method="setTemplate">
                <template>TIG/MyParcel2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_shippingmethod>

    <opc_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/MutationObserver.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/moment.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/webcomponents.min.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/myparcel.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/checkout_type/opc_index_index.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/checkout.js</file>
            </action>
        </reference>

        <reference name="checkout.onepage.shipping_method.available">
            <action method="setTemplate">
                <template>TIG/MyParcel2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </opc_index_index>

    <onestepcheckout_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/MutationObserver.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/moment.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/webcomponents.min.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/myparcel.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/checkout.js</file>
            </action>
        </reference>
    </onestepcheckout_index_index>

    <!-- for threesixty_checkout -->
    <checkout_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/MutationObserver.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/TIG/MyParcel2014/checkout.js</file>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <file>css/TIG/MyParcel2014/checkout.css</file>
            </action>
        </reference>
        <reference name="before_body_end">
            <block type="tig_myparcel/checkout_js" name="myparcel_checkout_js" template="TIG/MyParcel2014/checkout/threesixty_checkout/js.phtml"/>
        </reference>
    </checkout_index_index>
</layout>
